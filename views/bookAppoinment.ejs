<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Book Appointment</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
<link rel="icon" href="images/medicine.png">
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: linear-gradient(to right, #f7f1e3, #f7f1e3);
      margin: 0;
      padding: 30px;
    }
    .container {
      max-width: 600px;
      margin: auto;
      background: #ffd779;
      padding: 25px;
      border-radius: 16px;
      box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }
    h2 {
      text-align: center;
      color: #1565c0;
    }
    .input-group {
      margin-bottom: 15px;
    }
    label {
      display: block;
      margin-bottom: 6px;
      font-weight: 500;
    }
    input {
      width: 100%;
      padding: 10px;
      border-radius: 8px;
      border: 1px solid #ccc;
    }
    .button-group {
      display: flex;
      gap: 10px;
      margin-top: 10px;
    }
    button {
      flex: 1;
      padding: 12px;
      background: #1565c0;
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 1rem;
      cursor: pointer;
    }
    button:hover {
      background: #0d47a1;
    }
    .clear-btn {
      background: #e53935;
    }
    .clear-btn:hover {
      background: #c62828;
    }
    .back-button {
      background-color: #0d47a1;
      padding: 10px 20px;
      border-radius: 8px;
      color: white;
      text-decoration: none;
      display: inline-block;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>

<a href="/dashboard" class="back-button">‚Üê Back to Dashboard</a>

<div class="container">
  <h2>üìù BOOK APPOINTMENT</h2>
  <div class="input-group">
    <label>Patient Name:</label>
    <input id="name" type="text" placeholder="John Doe" />
  </div>
  <div class="input-group">
    <label>Mobile Number:</label>
    <input id="mobile" type="tel" placeholder="9876543210" />
  </div>
  <div class="input-group">
    <label>Age:</label>
    <input id="age" type="number" placeholder="35" />
  </div>
  <div class="input-group">
    <label>Appointment Date & Time:</label>
    <input id="date" type="datetime-local" />
  </div>
  <div class="button-group">
    <button onclick="saveAppointment()">‚ûï Add Appointment</button>
    <button class="clear-btn" onclick="clearForm()">üßπ Clear</button>
  </div>
</div>

<script>
  window.onload = () => {
    localStorage.removeItem("selectedPatient");
    const now = new Date();
    now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
    document.getElementById("date").value = now.toISOString().slice(0, 16);
  };

  function saveAppointment() {
    const name = document.getElementById("name").value.trim();
    const mobile = document.getElementById("mobile").value.trim();
    const age = document.getElementById("age").value.trim();
    const date = document.getElementById("date").value;

    if (!name || !mobile || !age || !date) {
      alert("Please fill all fields.");
      return;
    }

    const patient = { name, mobile, age, date };
    const patients = JSON.parse(localStorage.getItem("patients") || "[]");
    patients.push(patient);
    localStorage.setItem("patients", JSON.stringify(patients));
    window.location.href = "/patients";
  }

  function clearForm() {
    document.getElementById("name").value = '';
    document.getElementById("mobile").value = '';
    document.getElementById("age").value = '';
    const now = new Date();
    now.setMinutes(now.getMinutes() - now.getTimezoneOffset());
    document.getElementById("date").value = now.toISOString().slice(0, 16);
  }
</script>

</body>
</html>
