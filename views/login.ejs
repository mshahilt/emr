<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link rel="icon" href="images/medicine.png">
  <style>
    body {
      font-family: sans-serif;
      background: linear-gradient(to right, #2193b0, #6dd5ed);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }

    .form-box {
      background: #fff;
      padding: 2rem;
      border-radius: 15px;
      text-align: center;
      box-shadow: 0 10px 20px rgba(0,0,0,0.2);
      animation: fadeIn 1s ease;
      position: relative;
      width: 350px;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    input, button {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 8px;
      border: 1px solid #ccc;
    }

    button {
      background-color: #2193b0;
      color: white;
      cursor: pointer;
      font-weight: bold;
    }

    .exit-button {
      position: absolute;
      top: -50px;
      left: -9px;
      background-color: #fd473ace;
      color: white;
      width: 10%;
      padding: 3px;
      margin: 10px 0;
      border-radius: 8px;
      border: 1px solid #e92525e7;
      font-size: 20px;
      cursor: pointer;
      box-shadow: 0 5px 10px rgba(0,0,0,0.3);
    }

    .exit-button:hover {
      background-color: #d32f2f00;
    }

    .sync-section {
      margin-top: 20px;
    }

    .sync-section label {
      font-size: 14px;
      color: #444;
      display: block;
      margin-bottom: 5px;
    }

    .file-upload {
      border: 1px dashed #999;
      padding: 6px;
      border-radius: 6px;
      cursor: pointer;
      margin-bottom: 10px;
    }
  </style>
</head>
<body>

  <div class="form-box">
    <button class="exit-button" onclick="window.location.href='/'" title="Exit to Home">üîô</button>
    <h2>Login</h2>
    <form id="loginForm">
      <input type="text" id="username" placeholder="Username" required />
      <input type="password" id="password" placeholder="Password" required />
      <button type="submit">Login</button>
    </form>

    <div class="sync-section">
      <h4>üìÅ Manual Sync</h4>

      <button onclick="exportLocalStorage()">üîÑ Export Data</button>

      <label for="importFile">üì• Import .json</label>
      <input type="file" id="importFile" class="file-upload" accept=".json" onchange="importLocalStorage(event)">
    </div>
  </div>

  <script>
    // Login Logic
    document.getElementById("loginForm").addEventListener("submit", function(e) {
      e.preventDefault();
      const username = document.getElementById("username").value;
      const password = document.getElementById("password").value;

      if (username === "user12" && password === "123") {
        window.location.href = "/dashboard";
      } else {
        alert("Invalid username or password!");
      }
    });

    // Export localStorage
    function exportLocalStorage() {
      const data = JSON.stringify(localStorage);
      const blob = new Blob([data], { type: "application/json" });
      const url = URL.createObjectURL(blob);
      const a = document.createElement("a");
      a.href = url;
      a.download = "localStorage_backup.json";
      a.click();
      URL.revokeObjectURL(url);
    }

    // Import localStorage
    function importLocalStorage(event) {
      const file = event.target.files[0];
      if (!file) return;

      const reader = new FileReader();
      reader.onload = function(e) {
        try {
          const data = JSON.parse(e.target.result);
          for (let key in data) {
            localStorage.setItem(key, data[key]);
          }
          alert("Data imported successfully!");
        } catch (err) {
          alert("Failed to import: Invalid JSON file.");
        }
      };
      reader.readAsText(file);
    }
  </script>
</body>
</html>
